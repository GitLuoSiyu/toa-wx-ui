/* 拼团成功 */
.popup-content {
  padding: 20rpx;
  margin: 10rpx auto;
  background-color: #FFF;
  width: 700rpx;
  height: 600rpx;

  position: relative;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;

}
.close-box{
  position: absolute;
  right: -25rpx;
  top: -25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
  padding: 40rpx;
}
.popup-content .close-box .close-box-img{
  display: flex;
  width: 40rpx !important;
  height: 40rpx !important;
}
.popup-content .title {
  font-size: 44rpx;
  color: #111;
  text-align: center;
  margin-top: 60rpx;
}

.popup-content image {
  display: flex;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;

}

.popup-content .user-box {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx auto 30rpx;
}

.popup-content .user-box .user-box-img{
  margin: 0 10rpx;
}

.popup-content .go-on-collage {
  width: 411rpx;
  height: 72rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #FFF;
  margin: 20rpx auto 0rpx;
  background-color: #F40123;
}
.user-item{
  display: inline-block;
}
.popup-content .check-order-detail {
  color: rgba(0, 0, 0, 0.5);
  font-size: 22rpx;
  text-align: center;
  margin-top: 20rpx;
  padding: 10rpx 0 30rpx;
}
.css-right-icon{
  width: 14rpx;
  height: 14rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.5);
  border-right: 1rpx solid rgba(0, 0, 0, 0.5);
  transform: rotate(45deg);
  margin-left: -6rpx;
}
.scrollView{
  white-space: nowrap;
  padding-top: 1px;
}