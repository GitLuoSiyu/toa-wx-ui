.searchBox {
    background: #EAEAEA;
    display: flex;
    width: 100%;
    height: 57rpx;
    padding-left: 20rpx;
    border-radius: 4rpx;
}

.homeSearch {
    background: #EAEAEA;
}

.searchBox .input {
    flex: 1;
    height: 100%;
    width: 100vh;
    font-size: 24rpx;
    color: #767676;
}

.searchBox .searchBtn {
    padding: 0 18rpx;
    height: 100%;
    display: flex;
    align-items: center;
}

.searchBox .searchBtn .icon {
    width: 32rpx;
    height: 30rpx;
}