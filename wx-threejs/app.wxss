.fadeIn {
  -webkit-animation: a .3s forwards;
  animation: a .3s forwards
}

.fadeOut {
  -webkit-animation: b .3s forwards;
  animation: b .3s forwards
}

@-webkit-keyframes a {
  0% {
    opacity: 0
  }

  to {
    opacity: 1
  }
}

@keyframes a {
  0% {
    opacity: 0
  }

  to {
    opacity: 1
  }
}

@-webkit-keyframes b {
  0% {
    opacity: 1
  }

  to {
    opacity: 0
  }
}

@keyframes b {
  0% {
    opacity: 1
  }

  to {
    opacity: 0
  }
}

